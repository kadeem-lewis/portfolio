<style lang="scss">
  header {
    position: sticky;
    top: 0;
    background-color: hsl(var(--secondary));
    z-index: 100;
    border-bottom: 1px solid hsl(var(--accent));
  }
  nav {
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #title {
    font-weight: bold;
    font-size: 1.5rem;
  }
  ul {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 500;
  }
  li {
    list-style: none;
  }
  .resume-button {
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    border: 1px solid hsl(var(--border));
  }
</style>
