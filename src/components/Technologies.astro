---
import { Icon } from "astro-icon/components";
---

<section class="skills">
  <Icon name="mdi:language-html5" />
  <Icon name="devicon-plain:css3" />
  <Icon name="mdi:tailwind" />
  <Icon name="mdi:language-typescript" />
  <Icon name="mdi:nodejs" />
  <Icon name="mdi:react" />
  <Icon name="devicon-plain:nextjs" />
  <Icon name="mdi:nuxt" />
  <Icon name="devicon-plain:astro" />
</section>

<style lang="scss">
  .skills {
    /* Probably make this a grid too */
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin: 2rem 0;
  }
  @media (max-width: 768px) {
    .skills {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(5, 1fr);
    }
  }
  [data-icon] {
    font-size: 2rem;
    &:hover {
      transform: scale(1.2);
    }
  }
</style>
